.poem
  display block
  // margin-bottom 1.25em
  a
    display inline-block
    font-family $font-serif
    font-size 2.4rem
    max-width 100%
    position relative
    padding .5em 0
    overflow hidden
    text-overflow ellipsis
    // width 100%
    white-space nowrap
    &:before
      background-color rgba($primary, .3)
      bottom .15em
      // bottom 0
      content ''
      height 1px
      position absolute
      transition $transition
      width 100%
    &:hover:before
      background-color rgba($primary, 1)