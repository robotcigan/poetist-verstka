.poem
  display block
  margin-bottom 1.25em
  a
    display inline-block
    font-family $font-serif
    font-size 2.4rem
    position relative
    &:before
      background-color rgba($primary, .3)
      bottom -.25em
      content ''
      height 1px
      position absolute
      transition $transition
      width 100%
    &:hover:before
      background-color rgba($primary, 1)