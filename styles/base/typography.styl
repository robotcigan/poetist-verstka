small
  color $gray
  display block
  font-size 1.2rem
  line-height 1.6
  margin-bottom 2em
  a
    color $main
    linkHover($primary)

strong
  display block
  font-size 1.8rem
  letter-spacing -.5px
  line-height 1.5
  font-weight 500
  margin-bottom .7em

.header-center
  text-align center

ol
  margin 0
  margin-bottom 2.5em
  padding 0
  padding-left 1.2em
  li
    // display block
    font-size 1.8rem
    font-weight 300
    line-height 1.6
    margin-bottom .5em
    // margin-left 1em
    margin-left 0
    position relative
    vertical-align top
    // &:before
    //   display inline-block
    //   content counter(item) ". "
    //   counter-increment item
    //   font-family $font-secondary
    //   font-size 1em
    //   left -6.4rem
    //   line-height 1
    //   position absolute
    //   top -2rem

ul
  margin 0
  margin-bottom 2em
  list-style-type none
  // padding-left 1em
  padding-left 0
  li
    // display inline-block
    display block
    font-size 1.8rem
    line-height 1.6
    margin-bottom .75em
    // margin-bottom 0
    margin-left 0
    position relative
    vertical-align top
    &:before
      background-color $gray
      border-radius 50%
      content ''
      display block
      left -.8em
      // position absolute
      position relative
      size(4px)
      top .9em
      // top 0
      transition width 1s cubic-bezier(.4,0,0,1) .4s
      vertical-align middle

blockquote
  font-size 2.4rem
  font-weight 500
  line-height (32 / 24)
  margin 0
  margin-bottom 4rem
  position relative
  &:before
    // align-items center
    // background-color $primary-light
    content url('../../img/services-quote.svg')
    // border-radius 50%
    // display flex
    // justify-content center
    left -5.6rem
    position absolute
    // size(4rem)
    top -.6rem


