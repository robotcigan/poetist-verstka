p
  color $main
  display block
  font-size 1.6rem
  font-weight 400
  line-height (26 / 16)
  margin-bottom 2em
  margin-top 0
  & + p
    margin-top -1.5em
  & + .btn
    margin-top -1em
  a
    color $primary !important
    linkHover($primary)
    &:before
      bottom -.05em
  .link
    display inline

h1, .h1
  color $second
  font-family $font
  font-size 7.2rem
  font-weight 500
  // line-height (82 / 72)
  line-height 1.2
  // letter-spacing -3px
  letter-spacing -.05em
  margin-bottom .5em
  margin-top 0
  &_long
    font-size 4rem

h2, .h2
  font-family $font
  font-size 4.8rem
  font-weight 500
  line-height 1
  letter-spacing -2px
  margin-top 0
  margin-bottom .5em

h3, .h3
  font-family $font
  font-size 3.2rem
  font-weight 500
  // line-height (32 / 24)
  line-height 1.2
  margin-bottom .75em
  margin-top 0


h4, .h4
  font-family $font
  font-size 2.4rem
  font-weight 500
  line-height (32 / 24)
  margin-bottom .75em
  margin-top 0

h5, .h5
  font-family $font
  font-size 1.4rem
  font-weight 700
  letter-spacing 1px
  margin 0
  text-transform uppercase

