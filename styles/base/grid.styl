.wrapper
  margin 0 auto
  padding-left 2.4rem
  padding-right 2.4rem
  width 100%

.container
  display grid
  grid minmax(100px, auto)
  grid-template-columns repeat(12, 1fr)
  grid-column-gap 1.2rem
  grid-row-gap 2.4rem
  margin-left 0
  margin-right 0
  padding-left 0
  padding-right 0
  &:before
    display none

.col
  grid-column span 12

