.modal
  // animation bigFadeUp .5s forwards ease
  background #fff
  box-shadow 0 1rem 2rem rgba($main, .1)
  display none
  margin 0 auto
  max-width 140rem
  padding 0
  position relative
  width 90%
  &__body
    display flex
    padding 8rem 12rem
  &__left
    flex-shrink 0
    margin-right 8rem
  &__title
    font-size 4rem
    font-weight 700
    margin-bottom .5em
  .socials
    justify-content center
  .member
    &__img
      max-width 40rem
    &__certificates
      display flex
    &__certificate
      margin-bottom 3.2rem
      margin-top -2.4rem
      img
        max-width 100%
        width 10rem
      &:not(:last-child)
        margin-right .8rem
    &__xp
      font-size 1.8rem
      font-weight 700
      text-align center

.fancybox-can-swipe .fancybox-content, .fancybox-can-pan .fancybox-content
  cursor initial

.fancybox-close-small
  color #fff !important


@media(max-width 1200px)
  .modal
    width 94%
    &__body
      padding 2.4rem 2.4rem
    &__left
      margin-right 4rem
      width 50%
    &__right
      width 50%



@media(max-width 767px)
  .modal
    margin-bottom 8rem
    top 3.2rem
    &__body
      display block
    &__left
      width 100%
    &__right
      width 100%
    &__title
      font-size 2.4rem
    .member
      &__photo
        margin -2.4rem
        margin-bottom 0
      &__xp
        margin-bottom 1em
        text-align left



@media(max-width 370px)
  .modal
    &__header
      font-size 2rem